---
import Pill from './Pill.astro'

interface Props {
    title: string
    author: string
    genre: string
    year: number
    read_on: string
    review: string
}

const { title, author, genre, year, read_on, review } = Astro.props
---

<div class="card">
    <div class="card-content">
        <h2>{ title }</h2>
        <h3>by { author } </h3>
        <div class="pills">
            <Pill type="genre" value={ genre } />
            <Pill type="published" value={ year } />
            <Pill type="read" value={ read_on } />
        </div>
        <p>
            { review }
        </p>
    </div>
</div>
<style>
	.card {
        margin: 1rem 0;
		display: flex;
        flex-direction: column;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}

    .card-content {
        padding: 1em;
    }

	h2 {
		margin: 0;
        padding: 0;
        color: rgb(var(--accent-light));
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        font-style: oblique;
    }

    h3 {
        margin: 0;
        padding-top: 0;
        padding-bottom: 1em;
    }

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
</style>